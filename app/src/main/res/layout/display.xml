<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

>


    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content" android:id="@+id/race" tools:layout_editor_absoluteY="78dp"
            tools:layout_editor_absoluteX="151dp" android:textSize="12sp" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginStart="20dp"
            android:id="@+id/name"
            tools:layout_editor_absoluteY="47dp"
            tools:layout_editor_absoluteX="151dp"
            android:textStyle="bold"
            android:textSize="16sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/race"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" android:id="@+id/country" tools:layout_editor_absoluteY="102dp"
            tools:layout_editor_absoluteX="151dp" android:textSize="10sp" tools:ignore="SmallSp"/>
    <ImageView
            android:layout_width="110dp"
            android:layout_height="80dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageView2" tools:layout_editor_absoluteY="47dp" tools:layout_editor_absoluteX="16dp"/>


</RelativeLayout>